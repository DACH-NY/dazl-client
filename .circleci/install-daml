set -xeuo pipefail

function install {
    if ! link ; then
        curl -sSL https://get.daml.com/ | sh
        link
    fi
    daml install 2.5.0
    daml install 1.18.3
}

function link {
    mkdir -p "$HOME/bin"
    [ -f "$HOME/.daml/bin/daml" ] && \
        ln -s "$HOME/.daml/bin/daml" "$HOME/bin/"
}

install
